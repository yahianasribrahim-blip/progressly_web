// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  USER
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")
  role          UserRole  @default(USER)

  accounts Account[]
  sessions Session[]
  profile  UserProfile?

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  savedIdeas SavedIdea[]
  savedTrends SavedTrend[]
  supportTickets SupportTicket[]
  usageTracking UsageTracking?

  @@map(name: "users")
}

// Usage tracking for plan limits
model UsageTracking {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Monthly counts
  formatSearchesThisMonth Int      @default(0)
  optimizationsThisMonth  Int      @default(0)
  analysesThisMonth       Int      @default(0)
  
  // Month tracking for resets
  currentMonth            Int      @default(1)
  currentYear             Int      @default(2024)
  
  updatedAt               DateTime @updatedAt
  
  @@index([userId])
  @@map(name: "usage_tracking")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

// ============================================
// PROGRESSLY - Content Creator Platform Models
// ============================================

enum ContentPlatform {
  INSTAGRAM
  TIKTOK
  YOUTUBE
  TWITTER
  LINKEDIN
  FACEBOOK
}

enum ContentNiche {
  HIJAB
  DEEN
  CULTURAL
  FOOD
  GYM
  PETS
  STORYTELLING
  OTHER
}

enum NotificationType {
  TRENDING_TOPIC
  ENGAGEMENT_CHANGE
  CONTENT_RISK
  AI_INSIGHT
  SYSTEM
}

enum SubscriptionTier {
  FREE
  CREATOR
  PRO
}

// Extended user profile for content creators
model UserProfile {
  id            String           @id @default(cuid())
  userId        String           @unique
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  username      String?          @unique
  bio           String?
  niche         ContentNiche     @default(OTHER)
  platforms     ContentPlatform[]
  
  // Notification preferences
  emailNotifications    Boolean  @default(true)
  trendingAlerts        Boolean  @default(true)
  engagementAlerts      Boolean  @default(true)
  riskAlerts            Boolean  @default(true)
  
  // Usage tracking for free tier
  dailyRecommendations  Int      @default(0)
  lastRecommendationDate DateTime?
  
  onboardingCompleted   Boolean  @default(false)
  
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  socialConnections  SocialConnection[]
  savedInsights      SavedInsight[]
  notifications      Notification[]
  recommendations    ContentRecommendation[]
  creatorSetup       CreatorSetup?

  @@map(name: "user_profiles")
}

// Creator's equipment and constraints for personalized recommendations
model CreatorSetup {
  id            String       @id @default(cuid())
  profileId     String       @unique
  profile       UserProfile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  // Team size
  teamSize          Int          @default(1)  // 1 = solo creator
  
  // Equipment
  primaryDevice     String?      // "iPhone 11", "Canon EOS R5", etc.
  hasExternalMic    Boolean      @default(false)
  hasLighting       Boolean      @default(false)
  hasGreenScreen    Boolean      @default(false)
  
  // Props and resources
  availableProps    String[]     // ["ring light", "whiteboard", "plants", etc.]
  filmingLocations  String[]     // ["bedroom", "office", "outdoors", etc.]
  
  // Time commitment
  hoursPerVideo     Int          @default(2)  // Hours willing to spend per video
  videosPerWeek     Int          @default(3)  // Target posting frequency
  
  // Content preferences
  isMuslimCreator   Boolean      @default(false)  // Halal-friendly recommendations
  prefersNoMusic    Boolean      @default(false)  // No music, nasheeds as alternative
  
  // Target audience (for CTA recommendations)
  targetAudience    String       @default("young_adults")  // kids, teens, young_adults, adults, professionals
  
  // Experience level
  experienceLevel   String       @default("beginner")  // beginner, intermediate, advanced
  
  // Detailed content description (from onboarding)
  contentActivity    String?      // "Street racing BMWs", "cooking halal recipes"
  filmingStyle       String?      // "POV from inside car", "tripod in kitchen"
  resourcesAccess    String?      // "Public roads only, no track access"
  contentConstraints String?      // "Can only film weekends, limited editing skills"
  
  // Content niche for trending formats (combines all above into summary)
  contentNiche      String?      // Free text, auto-generated from above fields
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map(name: "creator_setups")
}

// Connected social media accounts
model SocialConnection {
  id            String          @id @default(cuid())
  profileId     String
  profile       UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  platform      ContentPlatform
  accountId     String?
  username      String?
  accessToken   String?         @db.Text
  refreshToken  String?         @db.Text
  tokenExpiry   DateTime?
  
  followerCount Int?
  followingCount Int?
  postCount     Int?
  engagementRate Float?
  
  lastSynced    DateTime?
  isActive      Boolean         @default(true)
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([profileId, platform])
  @@map(name: "social_connections")
}

// Saved/bookmarked insights and recommendations
model SavedInsight {
  id            String          @id @default(cuid())
  profileId     String
  profile       UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  type          String          // 'trend', 'suggestion', 'hashtag', 'caption'
  title         String
  content       String          @db.Text
  metadata      Json?           // Additional structured data
  
  platform      ContentPlatform?
  
  createdAt     DateTime        @default(now())
  
  @@index([profileId])
  @@map(name: "saved_insights")
}

// User notifications
model Notification {
  id            String           @id @default(cuid())
  profileId     String
  profile       UserProfile      @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  type          NotificationType
  title         String
  message       String           @db.Text
  metadata      Json?
  
  isRead        Boolean          @default(false)
  isEmailSent   Boolean          @default(false)
  
  createdAt     DateTime         @default(now())
  
  @@index([profileId, isRead])
  @@map(name: "notifications")
}

// AI-generated content recommendations
model ContentRecommendation {
  id            String          @id @default(cuid())
  profileId     String
  profile       UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  type          String          // 'video_idea', 'caption', 'hashtag_set', 'posting_time'
  title         String
  content       String          @db.Text
  hashtags      String[]
  
  platform      ContentPlatform?
  score         Float?          // Relevance/quality score
  
  isUsed        Boolean         @default(false)
  isSaved       Boolean         @default(false)
  
  expiresAt     DateTime?
  createdAt     DateTime        @default(now())
  
  @@index([profileId])
  @@map(name: "content_recommendations")
}

// Global trending topics (cached)
model TrendingTopic {
  id            String          @id @default(cuid())
  
  platform      ContentPlatform
  niche         ContentNiche
  
  topic         String
  description   String?         @db.Text
  hashtags      String[]
  score         Float           // Trending score
  
  metadata      Json?           // Additional data like engagement stats
  
  expiresAt     DateTime
  createdAt     DateTime        @default(now())
  
  @@index([platform, niche])
  @@map(name: "trending_topics")
}

// Content Bank - Saved Video Ideas
model SavedIdea {
  id          String   @id @default(cuid())
  userId      String
  title       String
  concept     String   @db.Text
  shotByShot  Json?
  tips        String[]
  sourceVideo String?  // URL of inspiration video
  status      String   @default("saved") // saved, in_progress, used
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map(name: "saved_ideas")
}

// Trend Bank - Saved Trending Formats
model SavedTrend {
  id               String   @id @default(cuid())
  userId           String
  formatName       String
  formatDescription String  @db.Text
  whyItWorks       String   @db.Text
  howToApply       String[] // Array of application ideas
  halalAudio       String[] // Array of halal audio suggestions
  niches           String[] // Array of applicable niches
  avgStats         Json?    // { views, likes, shares }
  notes            String?  @db.Text
  status           String   @default("saved") // saved, applied, archived
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map(name: "saved_trends")
}

// Support Tickets
model SupportTicket {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String   @db.Text
  status      String   @default("open") // open, closed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages TicketMessage[]
  
  @@index([userId])
  @@map(name: "support_tickets")
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  content   String   @db.Text
  isAdmin   Boolean  @default(false) // true if sent by admin/you
  createdAt DateTime @default(now())
  
  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@map(name: "ticket_messages")
}
